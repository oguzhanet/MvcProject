@model MvcProject.Entities.Concrete.Heading
@{
    ViewBag.Title = "UpdateHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Güncelleme Sayfası</h2>

@using (Html.BeginForm("UpdateHeading","Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Id")
        @Html.TextBoxFor(x=>x.HeadingName, new {@class="form-control"})
        <br />
        @Html.Label("Kategori ismi")
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
        <br />
        <button class="btn btn-default" style="background-color:#ff6a00; color:white;">Değişiklikleri Kaydet</button>
    </div>
}