<!DOCTYPE html>
<html>
<head>
    <title>Skills Profile Widget Flat Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/AdminLTE-3.0.4/Skills/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/Skills/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/Skills/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Profil Kartım</h1>
        <a href="/TalentCard/AddCard/" class="btn btn-default" style="background-color:#0094ff; margin-left:705px; color:white;">Yeni Kart Ekle</a>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                @foreach (var item in Model)
                {
                    <div class="profile-grid logo wthree">
                        @if (item.Image != null)
                        {
                            <img src="@item.Image" style="width:150px;" alt="">
                        }
                        else
                        {
                            <img src="~/AdminLTE-3.0.4/Skills/images/img1.jpg" style="width:150px;" alt="">
                        }

                        <h2>@item.Name @item.LastName </h2>
                        <p>@item.Text</p>

                    </div>
                    <h3 class="title">Yeteneklerim</h3>
                    <div class="form-group row">

                        <div class="offset-sm-2 col-sm-10">

                            <a href="/Statistics/Index/" style="margin-bottom:10px; color:aqua">İstatistiklere Dön</a>

                            <a href="/TalentCard/UpdateCard/@item.CardId" class="btn btn-default" style="background-color:#ff6a00; margin-left:205px; color:white;">Bilgileri Güncelle</a>

                        </div>

                    </div>


                    <div class="col-md-6 skills-right bar_group">
                        <div class='bar_group__bar thin' label='@item.Skill &nbsp;&nbsp; @item.SkillPoint%' value='@item.SkillPoint'></div>
                        <div class='bar_group__bar thin' label='@item.Skill2 &nbsp;&nbsp; @item.SkillPoint2%' value='@item.SkillPoint2'></div>
                        <div class='bar_group__bar thin' label='@item.Skill3 &nbsp;&nbsp; @item.SkillPoint3%' value='@item.SkillPoint3'></div>
                        <div class='bar_group__bar thin' label='@item.Skill4 &nbsp;&nbsp; @item.SkillPoint4%' value='@item.SkillPoint4'></div>
                        <div class='bar_group__bar thin' label='@item.Skill5 &nbsp;&nbsp; @item.SkillPoint5%' value='@item.SkillPoint5'></div>
                        <div class='bar_group__bar thin' label='@item.Skill6 &nbsp;&nbsp; @item.SkillPoint6%' value='@item.SkillPoint6'></div>
                        <div class='bar_group__bar thin' label='@item.Skill7 &nbsp;&nbsp; @item.SkillPoint7%' value='@item.SkillPoint7'></div>
                        <div class='bar_group__bar thin' label='@item.Skill8 &nbsp;&nbsp; @item.SkillPoint8%' value='@item.SkillPoint8'></div>
                        <div class='bar_group__bar thin' label='@item.Skill9 &nbsp;&nbsp; @item.SkillPoint9%' value='@item.SkillPoint9'></div>
                        <div class='bar_group__bar thin' label='@item.Skill10 &nbsp;&nbsp; @item.SkillPoint10%' value='@item.SkillPoint10'></div>

                    </div>
                    <div class="social-icons agileits">
                        <ul>
                            <li><a href="#"></a></li>
                            <li><a href="#" class="fb"></a></li>
                            <li><a href="#" class="be"></a></li>
                            <li><a href="#" class="gg"></a></li>
                        </ul>
                    </div>
                    <hr />
                    <br />
                }
                <!--bar-js-->
                <script src="~/AdminLTE-3.0.4/Skills/js/bars.js"></script>

                <div class="clear"> </div>

            </div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p> © 2016 Skills Profile Widget . All rights reserved | Design by <a href="http://w3layouts.com/" target="_blank">W3layouts.</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>

