    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta name="theme-color" content="#7952b3">

    <link href="signin.css" rel="stylesheet">
</head>
<body class="text-center">
    <div style="width:500px; margin-left:500px; margin-top:100px">
        <main class="form-signin">
            @using (Html.BeginForm("Intern", "Default", FormMethod.Post))
            {
                <img class="mb-4" src="https://otorapor.com/intern/otorapor.jfif" alt="" width="180" height="90">
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" name="Name" placeholder="Ali Yıldız" required="">
                    <label for="floatingInput">Ad Soyad</label>
                </div>

                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" name="Mail" placeholder="name@example.com" required="">
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingPassword" name="Phone" placeholder="500 000 0000" required="">
                    <label for="floatingPassword">Telefon</label>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Sözleşmeyi okudum ve onaylıyorum.

                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Gönder</button>
            }

        </main>
    </div>

    <button type="button" style="margin-top:30px" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">İşlem bilginiz için tıklayınız..</button>


    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">İşlem Bilgisi</h3>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Telefon</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Mail </td>
                                <td>@item.Phone </td>
                            </tr>
                        }
                    </table>
                    <button class="btn btn-danger" data-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>
    <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
   
</body>
</html>