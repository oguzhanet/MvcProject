@using MvcProject.Entities.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>Hakkımızda Veri Listesi     @Html.Action("AboutPartial", "About")</h2>*@

<div>
    <div class="row gx-5">
        <div class="col" style="margin-top:15px; margin-bottom:5px;">
            <h2>Hakkımızda Veri Listesi </h2>
        </div>
        <div class="col-7" style="margin-top:15px; margin-bottom:5px; margin-right:15px;">
            @Html.Action("AboutPartial", "About")
        </div>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Hakkımda</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AboutId</th>
            <td>Başlık</td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }
</table>

